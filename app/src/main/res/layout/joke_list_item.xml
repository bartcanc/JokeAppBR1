<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/joke_category_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_shape"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/joke_category_abbr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:fontFamily="@font/noto_sans_bold_italic"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="4sp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/joke_category_circle"
        app:layout_constraintEnd_toEndOf="@+id/joke_category_circle"
        app:layout_constraintStart_toStartOf="@+id/joke_category_circle"
        app:layout_constraintTop_toTopOf="@+id/joke_category_circle"
        tools:text="Pr" />
    <TextView
        android:id="@+id/joke_short"
       android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:fontFamily="@font/noto_sans"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/joke_category_circle"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Knock, Knock ..."
        tools:ignore="RtlCompat" />
    <View
        android:id="@+id/joke_category_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/joke_category_circle" />

    <ImageView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:tint="#EF5350"
        app:layout_constraintBottom_toBottomOf="@+id/joke_short"
        app:layout_constraintEnd_toEndOf="@+id/joke_short"
        app:layout_constraintTop_toTopOf="@+id/joke_short"
        app:srcCompat="@drawable/flag" />

</androidx.constraintlayout.widget.ConstraintLayout>